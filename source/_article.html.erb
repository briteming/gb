<article>
  <header>
    <time datetime="<%= article.date.strftime('%b %e') %>"><%= article.date.strftime('%b %e') %></time>
    <h1><%= link_to article.title, article %></h1>
  </header>

  <%= article.summary %>
  <%= link_to '阅读全文…', article %>

  <footer>
    <% article.tags.each do |tag| %>
      <%= link_to tag, tag_path(tag), class: 'tag' %>
    <% end %>
  </footer>
</article>
