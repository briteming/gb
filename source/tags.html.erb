<% set_meta_tags title: '标签云' %>

<div class="panel panel-default panel-tags">
  <div class="panel-heading">
    <h3 class="panel-title">标签云</h3>
  </div>
  <div class="panel-body">
    <ul id="tags">
      <% TagCloud.render(blog.tags) do |tag, weight| %>
        <li><a href="<%= tag_path(tag) %>" class="tag-<%= weight %>"><%= tag %></a></li>
      <% end %>
    </ul>
  </div>
</div>

